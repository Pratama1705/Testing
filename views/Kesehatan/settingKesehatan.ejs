   <title>WAPTRID</title>
    <link rel="shortcut icon" href="Assets/Image/Logo1.jpg">
    <link rel="stylesheet" href="./css/setting.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/simple-line-icons/2.4.1/css/simple-line-icons.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css">
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light fixed-top" style="background-color: #80d8de" id="navbar">
        <div class="container">
            <a class="navbar-brand" style="margin-right: 5%;" href="settingpage.html">
                <img src="./Image/KonsepLogo1.png" alt="Logo" width="30" height="30" style="border-radius: 50%; font-size: small; margin-right: 10px;" class="d-inline-block align-text-top">
                WAPTRID
              </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown"
                aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-between" id="navbarNavDropdown">
                <div></div>
                <ul class="navbar-nav">
                    <li class="nav-item dropdown me-5">
                      <a class="nav-link" href="/home_kesehatan" id="navbar" role="button" aria-expanded="false">
                        Home
                      </a>
                    </li>
                  </ul>
            </div>
        </div>
    </nav>

     <!-- Alert if any error during input a value in form -->
     <% if (locals.message) { %>
        <div class="alert alert-danger" role="alert"><%= locals.message %></div>
     <% } %>

    <!--Body-->
    <div class="registration-form">
        <form class="row g-3" action="/setting_kesehatan" method="POST">
            <div class="col-md-6">
                <label for="FirstName" class="form-label">First Name</label>
                <input name="firstName" type="text" class="form-control" id="FirstName" value="<%= locals.firstName %>">
            </div>
            <div class="col-md-6">
                <label for="LastName" class="form-label">Last Name</label>
                <input name="lastName" type="text" class="form-control" id="LastName" value="<%= locals.lastName %>">
            </div>
            <div class="col-12">
                <label for="InputEmail" class="form-label">Email</label>
                <input name="email" type="text" class="form-control" id="InputEmail" value="<%= locals.email %>">
            </div>
            <div class="col-12">
                <label for="InputNIK" class="form-label">Institusi</label>
                <input name="institusi" type="text" class="form-control" id="InputNIK" value="<%= locals.institusi %>">
            </div>
            <div class="col-12">
                <label for="InputPhoneNumber" class="form-label">Phone Number</label>
                <input name="noHP" type="text" class="form-control" id="InputPhoneNumber" value="<%= locals.noHP %>">
            </div>
            <div class="col-md-6">
                <label for="InputPassword" class="form-label">Password</label>
                <input name="password" type="password" class="form-control" id="InputPassword" placeholder="Password">
                <span class="p-view">
                    <input type="checkbox" class="check" onclick="myFunction()">
                    <script>
                        function myFunction() {
                            var x = document.getElementById("InputPassword");
                            if (x.type == "password") {
                                x.type = "text";
                            } else {
                                x.type = "password";
                            }
                        }
                    </script>
                </span>
            </div>
            <div class="col-md-6">
                <label for="ConfirmPassword" class="form-label">Confirm Password</label>
                <input name="confirmPassword" type="password" class="form-control" id="confirmPassword" placeholder="Confirm Password">
                <span class="p-view2">
                    <input type="checkbox" class="check" onclick="myFunction2()">
                    <script>
                        function myFunction2() {
                            var x = document.getElementById("confirmPassword");
                            if (x.type == "password") {
                                x.type = "text";
                            } else {
                                x.type = "password";
                            }
                        }
                    </script>
                </span>
            </div>
            <div class="form-input">
                <button type="submit" class="btn btn-block submit">Update</button>
            </div>
            </div>
        </form>
    </div>

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ" crossorigin="anonymous"></script>
</body>
</html>