<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" href="KonsepLogo1.png" type="image/png" sizes="16x16" />
    <title>Sign Up Wisata</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/simple-line-icons/2.4.1/css/simple-line-icons.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" />
    <link rel="stylesheet" href="./css/regisBiasa.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css" />
  </head>
  <body>
    <!-- Alert if any error during input a value in form -->
    <% if (locals.message) { %>
    <div class="alert alert-danger" role="alert"><%= locals.message %></div>
    <% } %>

    <div class="registration-form">
      <form action="/registrasi_wisata" method="post">
        <div class="form-icon">
          <a href="/">
            <img src="./image/KonsepLogo1.png" />
          </a>
        </div>
        <h4 class="nama">Sign Up Wisata</h4>
        <div class="form-input">
          <input name="firstName" type="text" class="form-control item" id="firstName" placeholder="First Name" />
        </div>
        <div class="form-input">
          <input name="lastName" type="text" class="form-control item" id="lastName" placeholder="Last Name" />
        </div>
        <div class="form-input">
          <input name="email" type="text" class="form-control item" id="email" placeholder="Email" />
        </div>
        <div class="form-input">
          <input name="jenis_wisata" type="text" class="form-control item" id="NIK" placeholder="Jenis Wisata" />
        </div>
        <div class="form-input">
          <input name="noHP" type="text" class="form-control item" id="noHP" placeholder="No Handphone" />
        </div>
        <div class="form-input">
          <input name="password" type="password" class="form-control item" id="password" placeholder="Password" />
          <span class="p-view">
            <input type="checkbox" class="check" onclick="myFunction()" />
            <script>
              function myFunction() {
                var x = document.getElementById('password');
                if (x.type == 'password') {
                  x.type = 'text';
                } else {
                  x.type = 'password';
                }
              }
            </script>
          </span>
        </div>
        <div class="form-input">
          <input name="confirmPassword" type="password" class="form-control item" id="confirmPassword" placeholder="Confirm Password" />
          <span class="p-view">
            <input type="checkbox" class="check" onclick="myFunction2()" />
            <script>
              function myFunction2() {
                var x = document.getElementById('confirmPassword');
                if (x.type == 'password') {
                  x.type = 'text';
                } else {
                  x.type = 'password';
                }
              }
            </script>
          </span>
        </div>
        <div class="form-group">
          <button id="iniSubmit" type="submit" class="btn btn-block create-account">Create Account</button>
        </div>
      </form>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="postData.js"></script>
    <script type="text/javascript" src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.15/jquery.mask.min.js"></script>
    <script src="assets/js/script.js"></script>
  </body>
</html>
