<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous" />
    <link rel="stylesheet" href="./css/homeBiasa.css" />

    <title>Home Warga</title>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg">
      <div class="container-fluid">
        <a class="navbar-brand" href="/home_biasa">
          <img src="./image/KonsepLogo1.png" alt="" width="30" height="30" class="d-inline-block align-text-top" />
          WAPTRID
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"><img src="./image/icons8-menu-squared-50.png" width="30" height="30" alt="" /></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav mx-auto me-5">
            <li class="nav-item">
              <a id="ini" class="nav-link active" aria-current="page" href="/logout_biasa">Logout</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/setting_biasa"><img src="./image/icons8-settings-100.png" width="30" height="30" alt="" /></a>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <!-- Firstname -->
    <div class="namaAwal">
      <h4>Welcome, <%= locals.firstName %></h4>
    </div>

    <!-- Tanggal -->
    <div class="tanggal">
      <h6><%= locals.tanggal %></h6>
    </div>

    <!-- Apabila no data test -->
    <% if (locals.dataTest.messageData) { %>
    <center><h4 class="gaAda"><%= locals.dataTest.messageData %></h4></center>
    <% } else { %>
    <!-- Card info -->
    <div class="kartu">
      <div class="row row-cols-1 row-cols-md-2 g-1">
        <% for (let i = 0; i < locals.dataTest.length; i++) { %>
        <div class="col">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title"><%= locals.dataTest[i].jenis_test %></h5>
              <p class="card-text">Nama : <%= locals.firstName %> <%= locals.lastName %></p>
              <p class="card-text">NIK : <%= locals.dataTest[i].NIK_pasien %></p>
              <p class="card-text">Tanggal Test : <%= locals.dataTest[i].tanggal_test %></p>
              <p class="card-text">Lokasi Test : <%= locals.dataTest[i].lokasi_test %></p>
              <p class="card-text">Hasil Test : <%= locals.dataTest[i].hasil_test %></p>
            </div>
          </div>
        </div>
        <% } %>
      </div>
    </div>
    <% } %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
  </body>
</html>
